<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaActivity">

    <Button
        android:id="@+id/bt_chama_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/chama_tela_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_pausa_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pausa_service"
        app:layout_constraintEnd_toEndOf="@+id/bt_chama_main"
        app:layout_constraintStart_toStartOf="@+id/bt_chama_main"
        app:layout_constraintTop_toBottomOf="@+id/bt_chama_main" />

    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        app:layout_constraintEnd_toEndOf="@+id/bt_pausa_service"
        app:layout_constraintStart_toStartOf="@+id/bt_pausa_service"
        app:layout_constraintTop_toBottomOf="@+id/bt_pausa_service" />
</androidx.constraintlayout.widget.ConstraintLayout>