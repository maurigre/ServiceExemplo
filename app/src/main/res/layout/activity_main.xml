<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Start Service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_abre_tela"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ABRE TELA"
        app:layout_constraintEnd_toEndOf="@+id/bt_start_service"
        app:layout_constraintStart_toStartOf="@+id/bt_start_service"
        app:layout_constraintTop_toBottomOf="@+id/bt_start_service" />

    <Button
        android:id="@+id/bt_stop_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="STOP SERVICE"
        app:layout_constraintEnd_toEndOf="@+id/bt_abre_tela"
        app:layout_constraintStart_toStartOf="@+id/bt_abre_tela"
        app:layout_constraintTop_toBottomOf="@+id/bt_abre_tela" />

</androidx.constraintlayout.widget.ConstraintLayout>